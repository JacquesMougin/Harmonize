{% extends "admin/base.html.twig" %}

{% block title %}Selection{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('comment') }}
{% endblock %}

{% block body %}

<h2 class="text-center m-5">Veuillez inscrire le nom d'un utilisiteur ou d'un projet</h2>

{% if is_granted('ROLE_SUPER_ADMIN') %}
<a class="btn btn-success my-4" href="{{ path('comments_add') }}">Ajouter un commentaire</a>
{% endif %}

<div class="d-flex flex-wrap mb-3">
    <p class="m-2">Rechercher par :</p>
    <button id="comment_user" class="btn btn-secondary mx-2">Utilisateur</button>
    <button id="comment_project" class="btn btn-secondary">Projet</button>
</div>

<div id="comment_form">
    {{ form_start(form) }}
        {{ form_rest(form) }}
        <button class="btn btn-info mt-4">Rechercher</button>
    {{ form_end(form)}}
</div>

{% endblock %}